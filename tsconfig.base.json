{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@mono-redux-starter/redux": ["libs/redux/src/index.ts"],
      "@mono-redux-starter/shared": ["libs/shared/src/index.ts"],
      "@mono-redux-starter/shared/hocs": ["libs/shared/hocs/src/index.ts"],
      "@mono-redux-starter/shared/hooks": ["libs/shared/hooks/src/index.ts"],
      "@mono-redux-starter/shared/permissions": [
        "libs/shared/permissions/src/index.ts"
      ],
      "@mono-redux-starter/shared/types": ["libs/shared/types/src/index.ts"],
      "@mono-redux-starter/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@mono-redux-starter/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@mono-redux-starter/templateapp": ["libs/templateapp/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
